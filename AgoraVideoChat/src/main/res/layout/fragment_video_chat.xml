<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".ui.fragment.VideoChatFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/timer_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="14dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/logo"
                app:tint="@color/white">

            </ImageView>

            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.cardview.widget.CardView
        android:id="@+id/local_view_layout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_2"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical_60"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/camera_off"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/black"
        android:elevation="40dp"
        android:visibility="gone"

        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_2"

        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical_60"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="@string/camera_off"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical"

        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/remote_view_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="1"
            android:animateLayoutChanges="true"
            android:background="@color/black"
            android:visibility="visible">

            <FrameLayout
                android:id="@+id/remote_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/remote_view_mute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="@string/teacher_not_joined"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/speaker_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_above="@id/timer2card"
                android:layout_marginHorizontal="25dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Shaun"
                android:textColor="@color/white"

                android:textSize="20sp"
                android:textStyle="bold" />


            <androidx.cardview.widget.CardView

                android:id="@+id/timer2card"
                android:layout_width="wrap_content"
                android:layout_height="0dp"


                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="24dp"

                android:layout_marginBottom="10dp"
                android:alpha="0.5"
                app:cardBackgroundColor="@android:color/background_light"

                >

                <TextView
                    android:id="@+id/timer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingHorizontal="5dp"
                    android:text="Hello"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>
        </RelativeLayout>


        <View
            android:id="@+id/SplitLine_hor1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/black">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"

                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_margin="16dp"
                android:elevation="20dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/new_message"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:elevation="25dp"
                        android:translationX="-14dp"
                        android:translationY="10dp"
                        android:translationZ="1dp"

                        android:visibility="gone"
                        app:cardBackgroundColor="@color/red"
                        app:cardCornerRadius="5dp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/chat_open"
                        android:layout_width="40dp"

                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="8dp"
                        android:elevation="20dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="20"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_messages"
                            app:tint="@color/primary" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/camera_toggle"
                    android:layout_width="40dp"

                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:elevation="20dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/cam"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="20"
                        android:scaleType="centerInside"
                        android:src="@drawable/camera_switch_line_icon"
                        app:tint="@color/primary" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/local_view"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:background="@color/black">


            </FrameLayout>

            <TextView
                android:id="@+id/local_view_mute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="@string/camera_off"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>